
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    var status = Context.Request.Query["status"];

    var pending = "";
    var inprocess = "";
    var rejected = "";
    var shipped = "";
    var delivered = "";
    var all = "";

    switch (status)
    {
        case "pending":
            pending = "bg-darkblue text-white";
            break;
        case "inprocess":
            inprocess = "bg-darkblue text-white";
            break;
        case "rejected":
            rejected = "bg-darkblue text-white";
            break;
        case "shipped":
            shipped = "bg-darkblue text-white";
            break;
        case "delivered":
            delivered  = "bg-darkblue text-white";
            break;
        default: 
            all = "bg-darkblue text-white";
            break;

    }

    }


<style>

</style>

<br />
<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h4 class="text-primary">Order List</h4>
        </div>
        <div class="p-2" >
            <div class="list-group list-group-horizontal">

                    <a class="list-group-item @pending " style="text-decoration:none;" asp-controller="Order"
                       asp-action="Index" asp-route-status="pending">
                        Pending
                    </a>
 

                    <a class="list-group-item @inprocess" style="text-decoration:none;" asp-controller="Order"
                       asp-action="Index" asp-route-status="inprocess">
                        In Process
                    </a>

  
                    <a class="list-group-item @shipped" style="text-decoration:none;" asp-controller="Order"
                       asp-action="Index" asp-route-status="shipped">
                        Shipped
                    </a>
     


                    <a class="list-group-item @delivered" style="text-decoration:none;" asp-controller="Order"
                       asp-action="Index" asp-route-status="delivered">
                        Delivered
                    </a>
      

                    <a class="list-group-item @rejected" style="text-decoration:none;" asp-controller="Order"
                       asp-action="Index" asp-route-status="rejected">
                Rejected
                </a>


                <a class="list-group-item @all" style="text-decoration:none;" asp-controller="Order"
                   asp-action="Index" asp-route-status="all">
                    All
                </a>


            </div>
        </div>
    </div>

    <br /> <br />
    <table id="tblData" class="table  table-bordered table-hover " style="width:100%">
        <thead class="thead-dark">
            <tr>
           
                <th>Requester</th>
                <th>Order Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>



@section Scripts{
    <script src="~/js/order_admin.js"></script>

}
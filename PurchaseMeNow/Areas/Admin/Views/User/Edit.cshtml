@model PurchaseMeNow.Models.ViewModels.ApplicationUserVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">User Edit</h4>


<div class="col-12 border-bottom">
    <h4 class="text-primary">Edit User</h4>
</div>
<div class="col-8 pt-4">
    <form method="post" asp-action="Edit">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ApplicationUser.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="ApplicationUser.Name" class="form-control" readonly />
                <input type="hidden" asp-for="ApplicationUser.Id" />
            </div>
        </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApplicationUser.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationUser.Email" class="form-control" />
                    <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Department
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.ApplicationUser.DepartmentId, Model.DepartmentList,
                   new { @class = "form-control" })
                    <span asp-validation-for="ApplicationUser.DepartmentId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Role
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.ApplicationUser.Role, Model.RoleList,
                   new { @class = "form-control" })
                    <span asp-validation-for="ApplicationUser.Role" class="text-danger"></span>
                </div>
            </div>
        <hr />
            <div class="form-group row">

                
                    <div class="col">
                        <input type="submit" value="Save" class="btn-sm btn-primary form-control" />
                    </div>
                    <div class="col">
                        <a style="text-decoration:none; text-align:center;" asp-action="Index" class="btn-sm btn-success form-control">Back to List</a>
                    </div>
                </div>
         
        </form>
</div>
    